    "sharp": "^0.33.0",
    "svelte": "^5.8.1",
    "typescript": "^5.7.2",
    "vite-node": "^3.0.0"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.mdx",
        "options": {
          "printWidth": 10000
        }
      },
      {
        "files": "*.svelte",
