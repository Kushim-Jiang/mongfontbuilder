{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "check": "astro check",
    "build": "npm run check && astro build",
    "preview": "astro preview",
    "format": "prettier --write . !lib/mongfontbuilder/data/*.json !tests/data/*.json"
  },
  "engines": {
    "node": "^24.11.0"
  },
  "dependencies": {
    "@astrojs/check": "0.9.5",
    "@astrojs/starlight": "0.36.3",
    "@astrojs/svelte": "7.2.2",
    "@fontsource/noto-sans-mongolian": "5.2.6",
    "@types/node": "24.10.1",
    "@unicode/unicode-17.0.0": "1.6.16",
    "astro": "5.16.0",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-svelte": "3.4.0",
    "svelte": "5.44.0",
    "typescript": "5.9.3",
    "vite-node": "3.0.0"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.mdx",
        "options": {
          "printWidth": 10000
        }
      },
      {
        "files": "*.astro",
        "options": {
          "plugins": [
            "prettier-plugin-astro"
          ],
          "parser": "astro",
          "printWidth": 10000
        }
      },
      {
        "files": "*.svelte",
        "options": {
          "plugins": [
            "prettier-plugin-svelte"
          ],
          "parser": "svelte",
          "printWidth": 10000
        }
      }
    ]
  }
}
