  "engines": {
    "node": "^22.0.0"
  },
  "dependencies": {
    "@astrojs/starlight": "^0.33.1",
    "@astrojs/svelte": "^7.0.9",
    "@fontsource/noto-sans-mongolian": "^5.1.1",
